// TypeScript config file that is used to compile the demo-app. Target environment will be ES5,
// since the demo-app will be served in the browser.
{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "lib": ["es6", "es2015", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/packages/demo-app",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": false,
    "typeRoots": [
      "../../node_modules/@types/!(node)"
    ],
    "baseUrl": ".",
    "paths": {
      "@angular/flex-layout/*": ["../../dist/packages/flex-layout/*"],
      "@angular/flex-layout": ["../../dist/packages/flex-layout/public-api"]
    }
  },
  "files": [
    "./demo-app-types.d.ts",
    "./demo-app-module.ts",
    "./system-config.ts",
    "./main.ts"
  ]
}
