{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/tools/gulp",
    "strictNullChecks": false,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "target": "es5",
    "removeComments": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "lib-build-tools": ["../package-tools/index"]
    }
  },
  "files": [
    "gulpfile.ts"
  ]
}
