{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,

    "skipDefaultLibCheck":true,
    "sourceMap": true,

    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "es2015", "dom"],

    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "**/*.spec.*",
    "node_modules",
    "dist",
    "deprecated",
    "demos",
    "src/lib/utils/testing"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
